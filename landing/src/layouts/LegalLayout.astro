---
import BaseLayout from "./BaseLayout.astro";
import Footer from "../components/Footer.astro";
import { getLangFromUrl } from "../i18n/utils";

interface Props {
  title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<BaseLayout title={title}>
  <main class="max-w-3xl mx-auto px-6 py-16 md:py-24">
    <a href={`/${lang}/`} class="text-sm text-primary hover:underline mb-8 inline-block">&larr; {lang === "de" ? "Zur√ºck zur Startseite" : "Back to home"}</a>
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">{title}</h1>
    <article class="prose prose-gray max-w-none [&_h2]:text-xl [&_h2]:font-semibold [&_h2]:mt-10 [&_h2]:mb-4 [&_h3]:text-lg [&_h3]:font-semibold [&_h3]:mt-8 [&_h3]:mb-3 [&_p]:text-gray-600 [&_p]:leading-relaxed [&_p]:mb-4 [&_ul]:list-disc [&_ul]:pl-6 [&_ul]:mb-4 [&_li]:text-gray-600 [&_li]:mb-1 [&_a]:text-primary [&_a]:underline">
      <slot />
    </article>
  </main>
  <Footer />
</BaseLayout>
